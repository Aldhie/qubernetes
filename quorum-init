#!/bin/bash

# create the output directory if
# it doesn't exist
mkdir -p out/config

# generate the nodes.yaml
# file for the set number of
# nodes.
./quorum-create-nodes

# generate the keygen script
# to generate nodekey, account keys, and
# quorum transaction manger (tm.pub,tm.key) keys.
./quorum-keygen

# generate the appropriate config files:
#   permissioned-nodes.json
#   genesis.json 
./quorum-config

echo
echo "  Base quorum resources have been generated. "
echo "  ...Running ./qubernetes to generate Kubernetes resources..."
echo
./qubernetes
